pragma solidity 0.8.20;

import {Test, console} from "../../lib/forge-std/src/Test.sol";
import {MoodNft} from "../../src/MoodNft.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";

contract MoodNftIntegrationTest is Test {
    MoodNft moodNft;
    address public USER = makeAddr("user");
    string public constant HAPPY_IMAGE_SVG = "data:image/svg+xml;base64,";
    string public constant SAD_IMAGE_SVG = "data:image/svg+xml;base64,";

    string public constant SAD_SVG_URI = "data:application/json;base64,";
    DeployMoodNft deploy;
    function setUp() public {
        deploy = new DeployMoodNft();
        moodNft = deploy.run();
    }

    function testViewTokenURIIntegration() public {
        vm.prank(USER);
        moodNft.mintNft();
        console.log(moodNft.tokenURI(0));
    }

    function testFlipTokenToSad() public {
        vm.prank(USER);
        moodNft.mintNft();

        vm.prank(USER);
        moodNft.flipMood(0);

        assertEq(keccak256(abi.encodePacked(moodNft.tokenURI(0))), keccak256(abi.encodePacked(SAD_SVG_URI)));
    }
}